{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "name": "Debug Vite App",
      "url": "http://localhost:5173", // URL del servidor Vite
      "webRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/frontend/node_modules/**"],
      "pathMappings": [
        {
          "url": "vite://", // Correcto para Vite
          "path": "${workspaceFolder}"
        }
      ]
    }
  ]
}
